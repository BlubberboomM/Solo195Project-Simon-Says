                <Rectangle Height="37" Stroke="Black" Width="100" Fill="White" Canvas.Left="191.5" Canvas.Top="208.523">
                    <Rectangle.Effect>
                        <DropShadowEffect/>
                    </Rectangle.Effect>
                </Rectangle>
                <Rectangle Height="37" Stroke="Black" Width="100" Fill="White" Canvas.Left="60.424" Canvas.Top="208.523">
                    <Rectangle.Effect>
                        <DropShadowEffect/>
                    </Rectangle.Effect>
                </Rectangle>

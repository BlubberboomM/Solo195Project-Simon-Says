                <TextBlock TextWrapping="Wrap" Foreground="Black" FontSize="16" TextAlignment="Center" Height="25" Canvas.Left="198" Canvas.Top="214.44" Width="87" RenderTransformOrigin="0.391,2.207" Text="Next Move"/>
